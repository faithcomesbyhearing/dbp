{
  "extends": [
    "config:base"
  ],
  "ignorePaths": [
    "docker-compose.yml",
    "package.json"
  ],
  "comment": "until AWS updates the PHP platform to 8.1, symfony/* needs to stay below 6.1",
  "ignoreDeps": [
    "symfony/http-client", 
    "symfony/yaml"
  ],
  "docker": {
    "enabled": false
  },
  "docker-compose": {
    "enabled": false
  },
  "packageRules": [
    {
      "matchPackagePatterns": [
        "*"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch"
    }
  ]
}
